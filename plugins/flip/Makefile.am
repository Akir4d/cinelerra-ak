plugin_LTLIBRARIES = flip.la
flip_la_LDFLAGS = -avoid-version -module -shared 
flip_la_LIBADD = 
flip_la_SOURCES = flip.C flipwindow.C 
AM_CXXFLAGS = $(LARGEFILE_CFLAGS)

AM_CPPFLAGS = -I$(top_srcdir)/guicast -I$(top_srcdir)/cinelerra -I$(top_srcdir)/quicktime
LIBTOOL = $(SHELL) $(top_builddir)/libtool $(LTCXX_FLAGS)

noinst_HEADERS = flip.h flipwindow.h
EXTRA_DIST = picon.png

flip.o: picon_png.h
picon_png.h: picon.png
	$(top_builddir)/guicast/pngtoh $^ || { rm -f $@; exit 1; }
clean-local:
	$(RM) picon_png.h
