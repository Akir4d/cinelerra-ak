AC_INIT(configure.in)

AC_CANONICAL_SYSTEM

AM_INIT_AUTOMAKE(Cinelerra, "1.1.0")
AM_CONFIG_HEADER(config.h)

AC_LANG_CPLUSPLUS
AC_LANG_C
AC_PROG_CXX

AC_ENABLE_SHARED
AC_ENABLE_STATIC
AM_PROG_LIBTOOL

CCAS="\$(top_srcdir)/admin/nasm"
AC_SUBST(CCAS)
AC_SUBST(CCASFLAGS)

AM_PATH_GLIB(1.2.0)

plugindir="\${exec_prefix}/lib/cinelerra"
AC_SUBST(plugindir)

AC_PATH_XTRA

LARGEFILE_CFLAGS="-D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64"
CFLAGS="-pipe -D_REENTRANT -DHAVE_LIBXXF86VM $LARGEFILE_CFLAGS $CFLAGS"
CXXFLAGS="-pipe -D_REENTRANT -DHAVE_LIBXXF86VM $LARGEFILE_CFLAGS $CXXFLAGS"

############## FIREWIRE
# firewire settings are propagated through FIREWIRE_CFLAGS and FIREWIRE_LDFLAGS
if test "x$enable_firewire" = "xyes" || test "x$enable_firewire" = "x"; then
	FIREWIRE_CFLAGS="-DHAVE_FIREWIRE -I/usr/include/libavc1394 -I/usr/include/libraw1394"
	FIREWIRE_LDFLAGS="-lraw1394 -lavc1394 -lrom1394"
fi
AC_SUBST(FIREWIRE_CFLAGS)
AC_SUBST(FIREWIRE_LDFLAGS)

AC_ARG_ENABLE(firewire, [  --disable-firewire	disable support for firewire [default=enabled]])
############## END OF FIREWIRE

############## AVIFILE SUPPORT
if test "x$enable_avifile" = "xyes"; then
	AM_PATH_AVIFILE(0.7.0)
	if test "x$HAVE_AVIFILE" = "xyes"; then
		AVIFILE_CXXFLAGS="-DUSE_AVIFILE $AVIFILE_CXXFLAGS"
	fi
fi
AC_ARG_ENABLE(avifile, [  --enable-avifile	enable support for avifile [default=no]])
############## END OF AVIFILE SUPPORT
############# CSS SUPPORT IN LIBMPEG3
if test "x$enable_css" = "xyes" || test "x$enable_css" = "x"; then
	CSS_CFLAGS="-DHAVE_CSS"
fi
AC_SUBST(CSS_CFLAGS)
AC_ARG_ENABLE(css, [  --disable-css	disable support for css in libmpeg3 [default=enabled]])
############## END OF CSS SUPPORT IN LIBMPEG3


############## SOUND
# the sound options are propagated by SOUND_CFLAGS and SOUND_LDFLAGS
if test "x$enable_oss" = "xyes" || test "x$enable_oss" = "x"; then
	SOUND_CFLAGS="-DHAVE_OSS $SOUND_CFLAGS"
fi
if test "x$enable_alsa" = "xyes" || test "x$enable_alsa" = "x"; then
	AM_PATH_ALSA(0.9.0)
	SOUND_CFLAGS="$ALSA_CFLAGS -DHAVE_ALSA $SOUND_CFLAGS"
	SOUND_LDFLAGS="$ALSA_LIBS $SOUND_LDFLAGS"
fi

if test "x$enable_esd" = "xyes" || test "x$enable_esd" = "x"; then
	AM_PATH_ESD
	SOUND_CFLAGS="$ESD_CFLAGS -DHAVE_ESOUND $SOUND_CFLAGS"
	SOUND_LDFLAGS="$ESD_LIBS $SOUND_LDFLAGS"
fi
AC_SUBST(SOUND_CFLAGS)
AC_SUBST(SOUND_LDFLAGS)
AC_ARG_ENABLE(oss, [  --disable-oss	disable support for oss [default=enabled]])
AC_ARG_ENABLE(alsa, [  --disable-alsa	disable support for alsa [default=enabled]])
AC_ARG_ENABLE(esd, [  --disable-esound	disable support for esound [default=enabled]])
############### END OF SOUND

############## MMX / 3DNOW
AC_ARG_ENABLE(x86, [  --disable-x86	disable x86 specific features autodetection in libmpeg3 and mpeg2enc [default=enabled]],,
							enable_x86=yes)
AC_ARG_ENABLE(mmx, [  --disable-mmx	disable support for mmx [default=enabled]],,
							enable_mmx=yes)
AC_ARG_ENABLE(3dnow, [  --disable-3dnow	disable support for 3dnow [default=enabled]],,
							enable_3dnow=yes)
if test "x$enable_x86" = "xyes"; then
	CPU_CFLAGS="-DX86_CPU $CPU_CFLAGS"
fi

if test "x$enable_mmx" = "xyes"; then
	CPU_CFLAGS="-DHAVE_MMX -DMMX -DUSE_MMX $CPU_CFLAGS" # -D_MMX_ doesn't work
fi
AM_CONDITIONAL(USEMMX, test "x$enable_mmx" = "xyes")

if test "x$enable_3dnow" = "xyes"; then
	CPU_CFLAGS="-DHAVE_3Dnow $CPU_CFLAGS" # -DUSE_3DNOW --> don't use, not compiling
fi
AM_CONDITIONAL(USE3DNOW, test "x$enable_3dnow" = "xyes")
AC_SUBST(LIBDECORE_LIBADD)
AC_SUBST(CPU_CFLAGS)
############## END OF MMX / 3DNOW

############## FFMPEG
AM_CONDITIONAL(FFMPEG_AC3, true)
AM_CONDITIONAL(FFMPEG_A52BIN, false)
AM_CONDITIONAL(FFMPEG_MP3LAME, true)
AM_CONDITIONAL(FFMPEG_VORBIS, true)
AM_CONDITIONAL(FFMPEG_HAVE_MLIB, false)
AM_CONDITIONAL(FFMPEG_TARGET_ARCH_ARMV4L, false)
AM_CONDITIONAL(FFMPEG_TARGET_ARCH_ALPHA, false)
AM_CONDITIONAL(FFMPEG_TARGET_ARCH_POWERPC, false)
AM_CONDITIONAL(FFMPEG_TARGET_MMI, false)
AM_CONDITIONAL(FFMPEG_TARGET_ALTIVEC, false)

############## END OF FFMPEG

